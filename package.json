{
  "name": "novella",
  "version": "0.0.0",
  "description": "Static site generator for web comics.",
  "repository": "git@github.com:cixzhang/Novella.git",
  "dependencies": {
    "lwip": "0.0.9"
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "vue-template-compiler": "^2.5.2",
    "markdown": "^0.5.0",
    "natural-compare": "^1.4.0",
    "optionator": "^0.8.2",
    "rollup": "^0.50.0",
    "rollup-plugin-json": "^2.0.2",
    "rollup-plugin-vue": "^2.5.2",
    "vue": "^2.0.5"
  },
  "main": "lib/novella.js",
  "bin": "lib/novella.js",
  "files": [
    "lib/",
    "assets/"
  ],
  "scripts": {
    "prepublish": "npm run build",
    "build": "browserify lib/deps.js -o lib/deps.build.js --node -s deps -x stylus -x typescript -x less -x uglify-js",
    "build-example": "node ./lib/novella.js example/pages -t Ducks"
  }
